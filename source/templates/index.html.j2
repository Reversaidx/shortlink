


{% block body %}
<div class="row">
  <div class="col-12">
    <h1>ShortLink generator</h1>
  </div>
  <div class="col-12">
    <form action="/create" method="post">
      <div class="form-group">
        <label for="fullurl">FullURL</label>
        <input class="form-control" type="text" name="fullurl" id="fullurl" placeholder="The Full url to create shortLink">
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-success" type="submit">Create ShortLink!</button>
      </div>

    </form>
  </div>
</div>
{% endblock %}